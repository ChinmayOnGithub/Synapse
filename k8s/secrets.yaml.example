# Example secrets file - DO NOT COMMIT THE ACTUAL secrets.yaml
# Copy this file to secrets.yaml and fill in your values
# Then run: kubectl apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: synapse-secrets
  namespace: synapse
type: Opaque
stringData:
  mongodb-uri: "mongodb://admin:password@mongodb:27017/synapse?authSource=admin"
  mongodb-password: "your-mongodb-password"
  jwt-secret: "your-jwt-secret-key-here"
  jwt-refresh-secret: "your-jwt-refresh-secret-key-here"
